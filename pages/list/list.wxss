.fixt{
  padding: 20rpx 40rpx;
  width: 670rpx;
  background: linear-gradient(to top,#ffffff,#6e42d3);
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}



.order-item {
  height: 100rpx;
  width: 100%;
  display: flex;
  position: relative;
  border-color:#aaa; 
  align-items: center;   
}

.remove{  
  width: 160rpx;  
  height: 100%;  
  background-color: red; 
  color: white; 
  position: absolute;  
  top: 0;  
  right: -160rpx;  
  display: flex;  
  justify-content: center;  
  align-items: center;  
} 