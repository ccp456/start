/* pages/monitoring/monitoring.wxss */
.container{
  // position: relative;
}
.nav{
  width: 90%;
  margin: 0 auto;
  font-size: 16px;
  line-height: 40px;
  border-bottom: 1px solid skyblue;
}
.nav-title{
  line-height: 30px
}
.nav-icon{
  float: right;
  font-size: 16px;
  line-height: 40px;
}
.nav-pop{
  left: 5%;
  top: 50px;
  position: absolute;
  border: 1px solid #eee;
  border-radius: 3px;
  box-shadow: 3px 3px 15px #ccc;
  width: 80%;
}
.nav-pop-item{
  padding-left: 10px;
  line-height: 40px;
}
.liston{
  animation: openlist 0.4s
}
.listoff{
  display: none;
  animation: closelist;
}
/* 动画 */
@keyframes openlist{
  from{
    opacity: 0;
    margin-top: -5%
  }
  to{
    opacity: 1;
    margin-top: 0%
  }
}
